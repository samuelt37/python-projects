 // Edge-tangent polytope and the sphere of edge tangencies// David Eppstein, UC Irvine, 21 May 2001global_settings {   assumed_gamma 2.2   ambient_light }light_source {  color  }light_source {  color  }// perp:   // perp:   #declare p=/sqrt(3)#declare q=/sqrt(186)camera {   location     look_at      up -q*0.65   right p*0.65   translate    rotate }sphere { , 2	texture {		finish {			specular 1			roughness 0.001			ambient 0.05			diffuse 0.01			reflection 0.5			phong 0.3			phong_size 60		}		pigment { color rgbf }	}}#declare P_Surf =texture {    finish {       ambient 0.2       diffuse 0.2    }    pigment { color red 1 green 1 blue 1 }}polygon {    4,    ,,,    texture { P_Surf }}polygon {    4,    ,,,    texture { P_Surf }}polygon {    4,    ,,,    texture { P_Surf }}polygon {    4,    ,,,    texture { P_Surf }}polygon {	3,	,,	texture { P_Surf }}polygon {	3,	,,	texture { P_Surf }}polygon {	3,	,,	texture { P_Surf }}polygon {	3,	,,	texture { P_Surf }}#declare P_Ring =texture {    finish {       ambient 0.3       diffuse 0.3    }    pigment { color red 1 green 0 blue 1/2 }}torus {	2/sqrt(2), 0.02	texture { P_Ring }	rotate 	translate }torus {	2/sqrt(2), 0.02	texture { P_Ring }	rotate 	translate }torus {	2/sqrt(2), 0.02	texture { P_Ring }	rotate 	translate 	rotate }torus {	2/sqrt(2), 0.02	texture { P_Ring }	rotate 	translate 	rotate }torus {	2*sqrt(1/5), 0.02	texture { P_Ring }	rotate 	translate }torus {	2*sqrt(1/5), 0.02	texture { P_Ring }	rotate 	translate }torus {	2*sqrt(1/5), 0.02	texture { P_Ring }	rotate 	translate 	rotate }torus {	2*sqrt(1/5), 0.02	texture { P_Ring }	rotate 	translate 	rotate } 