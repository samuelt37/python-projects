	texture { stripe1 }
	rotate 45*y
	translate 
}
box
{
	
	
	texture { stripe1 }
	rotate 45*y
	translate 
}

// second set of diagonal stripes
box
{
	
	
	texture { stripe1 }
	rotate -45*y
	translate 
}
box
{
	
	
	texture { stripe1 }
	rotate -45*y
	translate 
}
